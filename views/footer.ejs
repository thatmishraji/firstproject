<script type="text/javascript">
    $(document).ready(function() {
        $(document).on('change', '#state', async(e) => {
            const chosenState = e.target.value;
            try {
                $('#city').html('<option disabled>--Select City--</option>');
                const response = await axios.get(`/city_according_to_state/${chosenState}`);
                response.data.forEach(item => {
                    $('#city').append(`
                        <option value="${item['id_city']}">${item['city']}</option>
                    `);
                })
            } catch (error) {
                console.error('Error fetching city data:', error.message);
            }
        });
    });
