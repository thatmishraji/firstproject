<%- include('Header.ejs') %>

    <div class="pagetitle">
        <h1>Add User</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">Home</a></li>
                <li class="breadcrumb-item"><a href="/users">Users List</a></li>
                <li class="breadcrumb-item active">Add User</li>
            </ol>
        </nav>
    </div>
    <!-- End Page Title -->

    <section class="section">
        <div class="row">
            <div class="col-lg-12">

                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">User Details</h5>

                        <!-- Floating Labels Form -->
                        <form class="row g-3" id="form" action="/store_user" method="POST">
                            <div class="col-md-12">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="name" placeholder="Your Name" name="name">
                                    <label for="name">Your Name</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="email" class="form-control" id="email" placeholder="Your Email" name="email">
                                    <label for="email">Your Email</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="password" class="form-control" id="password" placeholder="Password" name="password">
                                    <label for="password">Password</label>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-floating">
                                    <textarea class="form-control" placeholder="Address" id="address" style="height: 100px;" name="address"></textarea>
                                    <label for="address">Address</label>
                                </div>
                            </div>
                            <div class="col-md-5">
                                <div class="form-floating mb-3">
                                    <select class="form-select" aria-label="State" id="state" name="state">
                                        <option disabled selected>--Select State--</option>
                                        <% states.forEach((item,index) => { %>
                                            <option value="<%= item.id_state %>"><%= item.state %></option>
                                        <% }); %>
                                    </select>
                                    <label for="state">State</label>
                                </div>
                            </div>
                            <div class="col-md-5">
                                <div class="col-md-12">
                                    <div class="form-floating mb-3">
                                        <select class="form-select" aria-label="city" id="city" name="city">
                                            <option disabled selected>--Select State First--</option>
                                        </select>
                                        <label for="city">City</label>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="zip" placeholder="Zip" name="zip">
                                    <label for="zip">Zip</label>
                                </div>
                            </div>
                            <div class="text-center">
                                <input type="submit" class="btn btn-primary" value="Submit Data">
                                <button type="reset" class="btn btn-secondary">Reset</button>
                            </div>
                        </form>
                        <!-- End floating Labels Form -->

                    </div>
                </div>

            </div>
        </div>
    </section>

    <%- include('Footer.ejs') %>